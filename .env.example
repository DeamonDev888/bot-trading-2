# Financial Analyst - Environment Configuration

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=financial_analyst
DB_USER=postgres
DB_PASSWORD=your_password_here

# Alternative: Use full connection string
# DATABASE_URL=postgresql://username:password@localhost:5432/financial_analyst

# News Scraping Configuration
NEWS_CACHE_HOURS=2
NEWS_MAX_ITEMS_PER_SOURCE=50
NEWS_REQUEST_TIMEOUT=5000
FRED_API_KEY=your_fred_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here
CME_API_TOKEN=your_cme_api_token_here

# AI/KiloCode Configuration
KICODE_API_KEY=your_kicode_api_key_here
KICODE_BASE_URL=https://api.kilocode.ai

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# File Paths
DATA_DIR=./data
EXPORTS_DIR=./data/exports

# Performance Settings
MAX_CONCURRENT_REQUESTS=3
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT_MS=2000