# Financial Analyst - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Enable database
USE_DATABASE=true

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=financial_analyst
DB_USER=postgres
DB_PASSWORD=your_password_here
# Alternative: Use full connection string
# DATABASE_URL=postgresql://username:password@localhost:5432/financial_analyst

# News Scraping Configuration
NEWS_CACHE_HOURS=2
NEWS_MAX_ITEMS_PER_SOURCE=50
NEWS_REQUEST_TIMEOUT=5000

# Environment
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# File Paths
DATA_DIR=./data
EXPORTS_DIR=./data/exports

# Performance Settings
MAX_CONCURRENT_REQUESTS=3
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT_MS=2000

# API Keys - Replace with your actual keys
FRED_API_KEY=your_fred_api_key_here
CME_API_TOKEN=your_cme_api_token_here
FINNHUB_API_KEY=your_finnhub_api_key_here

# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# Discord Admin User ID for bot commands
ADMIN_USER_ID=your_admin_user_id_here

# Discord Channel IDs - Active channels for publishing
DISCORD_CHANNEL_ID=your_default_channel_id_here
DISCORD_CHANNEL_IA=your_default_channel_id_here
DISCORD_CHANNEL_FINANCE=your_finance_channel_id_here

# SierraChart DTC Configuration
SIERRACHART_HOST=localhost
SIERRACHART_PORT=11099
SIERRACHART_USERNAME=your_sierra_chart_username
SIERRACHART_PASSWORD=your_sierra_chart_password
SIERRACHART_AUTO_RECONNECT=true
SIERRACHART_TIMEOUT=10000

# Bitcoin/Crypto Configuration pour SierraChart
BTC_SYMBOL=BTCHUSD
BTC_EXCHANGE=CME
BTC_INTERVAL=1

# KiloCode Configuration
KILOCODE_PATH=node.exe
KILOCODE_ARGS=--experimental-modules
KILOCODE_SCRIPT=C:\Users\YourUser\AppData\Roaming\npm\node_modules\@kilocode\cli\index.js
KILOCODE_MODEL=x-ai/grok-code-fast-1
